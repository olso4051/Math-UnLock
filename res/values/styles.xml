<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppThemeBlackFull" parent="android:Theme.Black.NoTitleBar.Fullscreen" />
    <style name="AppThemeBlack" parent="android:Theme.Black.NoTitleBar" />
    <style name="AppcompatTheme" parent="Theme.AppCompat.Light"/>
    <style name="AppThemeWallFull" parent="android:Theme.Wallpaper.NoTitleBar.Fullscreen" />
    <style name="AppThemeWall" parent="android:Theme.Wallpaper.NoTitleBar" />
    <style name="LoginTheme" parent="AppcompatTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="SpanningView">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/login_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/login_horizontal_margin</item>
        <item name="android:layout_marginBottom">@dimen/login_vertical_margin</item>
    </style>
    <style name="SpanningView.EditText">
        <item name="android:background">@drawable/login_edittext</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:longClickable">false</item>
    </style>
    <style name="SpanningView.Button">
        <item name="android:background">@drawable/login_button</item>
        <item name="android:textColor">@color/button_text</item>
    </style>
    <style name="SpanningView.Button.Left">
        <item name="android:background">@drawable/login_button</item>
        <item name="android:textColor">@color/button_text</item>
        <item name="android:layout_marginRight">@dimen/login_vertical_margin_half</item>
    </style>
    <style name="SpanningView.Button.Right">
        <item name="android:background">@drawable/login_button</item>
        <item name="android:textColor">@color/button_text</item>
        <item name="android:layout_marginLeft">@dimen/login_vertical_margin_half</item>
    </style>
    
    <style name="TitleStyle">
        <item name="android:textSize">@dimen/text_size_extra_large</item>
        <item name="android:textColor">@color/blue_on_white</item>
        <item name="android:background">@drawable/ab_background</item>
    </style>
    <style name="ChallengeTheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@style/TitleStyle</item>
        <item name="android:colorBackground">@android:color/white</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateHidden|adjustResize</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <style name="Dialog"/>
    <style name="Dialog.Button">
        <item name="android:background">@drawable/login_button</item>
        <item name="android:textColor">@color/button_text</item>
        <item name="android:layout_margin">@dimen/login_vertical_margin</item>
    </style>
</resources>