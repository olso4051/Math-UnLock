<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:picker="http://schemas.android.com/apk/res/com.olyware." >
    <PreferenceCategory
        android:title="@string/settings"
        android:key="settings">
        <ListPreference
      		android:key="max_tries"
      		android:title="@string/max_tries_title"
      		android:summary="@string/max_tries_summary"
      		android:dialogTitle="@string/max_tries_title"
	        android:entries="@array/max_tries_entries"
	        android:entryValues="@array/max_tries_values"
	        android:defaultValue="@string/max_tries_default" />
	</PreferenceCategory>
    <PreferenceCategory
        android:title="@string/settings_math_title"
        android:key="settings_math">
        <CheckBoxPreference
	        android:key="enable_math"
	        android:title="@string/enable_math_title"
	        android:summary="@string/enable_math_summary"
	        android:defaultValue="true"/>
	    <ListPreference
	        android:key="difficulty_math"
	        android:title="@string/difficulty_math_title"
	        android:summary="@string/difficulty_summary"
	        android:dialogTitle="@string/difficulty_math_title"
	        android:entries="@array/difficulty_entries"
	        android:entryValues="@array/difficulty_values"
	        android:defaultValue="@string/difficulty_math_default" />
	</PreferenceCategory>
	<PreferenceCategory
        android:title="@string/settings_vocab_title"
        android:key="settings_vocab">
        <CheckBoxPreference
	        android:key="enable_vocab"
	        android:title="@string/enable_vocab_title"
	        android:summary="@string/enable_vocab_summary"
	        android:defaultValue="false"/>
	    <ListPreference
	        android:key="difficulty_vocab"
	        android:title="@string/difficulty_vocab_title"
	        android:summary="@string/difficulty_summary"
	        android:dialogTitle="@string/difficulty_vocab_title"
	        android:entries="@array/difficulty_entries"
	        android:entryValues="@array/difficulty_values"
	        android:defaultValue="@string/difficulty_vocab_default" />
	</PreferenceCategory>
	<PreferenceCategory
        android:title="@string/settings_translate_title"
        android:key="settings_translate">
        <CheckBoxPreference
	        android:key="enable_translate"
	        android:title="@string/enable_translate_title"
	        android:summary="@string/enable_translate_summary"
	        android:defaultValue="false"/>
	    <ListPreference
	        android:key="difficulty_translate"
	        android:title="@string/difficulty_translate_title"
	        android:summary="@string/difficulty_summary"
	        android:dialogTitle="@string/difficulty_translate_title"
	        android:entries="@array/difficulty_entries"
	        android:entryValues="@array/difficulty_values"
	        android:defaultValue="@string/difficulty_translate_default" />
	</PreferenceCategory>
</PreferenceScreen>