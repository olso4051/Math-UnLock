<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical" >
    <LinearLayout 
	   	android:layout_width="match_parent"
       	android:layout_height="wrap_content"
       	android:orientation="horizontal" >
       	<ImageButton
		    android:id="@+id/back"
		    android:contentDescription="@string/back"
		    android:enabled="true"
		    android:layout_gravity="center_vertical"
		    android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:background="@drawable/back"/>
    	<TextView
            android:id="@+id/clock"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:focusable="true"
            android:text="@string/clock"
            android:textColor="#FFF"
            android:textSize="40sp" />
        <TextView
            android:id="@+id/money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/coins"
            android:gravity="center_vertical|right"
            android:focusable="true"
            android:text="@string/default_money"
            android:textColor="#FFF"
            android:textSize="40sp" />
	</LinearLayout>
	<ScrollView
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" >
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical" >
			<LinearLayout
			   	android:layout_width="match_parent"
		       	android:layout_height="wrap_content"
		       	android:orientation="horizontal" >
				<TextView
				    android:id="@+id/custom_question_text"
				    android:layout_height="wrap_content"
				    android:layout_gravity="bottom|left"
				    android:layout_width="0dp"
					android:layout_weight="1"
					android:focusable="true"
					android:text="@string/custom_question_text"
					android:textSize="20sp"
					android:textStyle="bold"/>
				<EditText
			    	android:id="@+id/custom_question_edit_text"
			    	android:layout_width="0dp"
			    	android:layout_height="wrap_content"
			    	android:layout_weight="2"
			    	android:gravity="bottom"
			    	android:minLines="2"
			    	android:textSize="20sp"
			    	android:hint="@string/custom_question_text"/>
			</LinearLayout>
			<LinearLayout
			   	android:layout_width="match_parent"
		       	android:layout_height="wrap_content"
		       	android:orientation="horizontal" >
				<TextView
				    android:id="@+id/custom_answer_text"
				    android:layout_height="wrap_content"
				    android:layout_gravity="bottom|left"
					android:layout_width="0dp"
					android:layout_weight="1"
					android:text="@string/custom_answer_text"
					android:textSize="20sp"
					android:textStyle="bold"/>
				<EditText
			    	android:id="@+id/custom_answer_edit_text"
			    	android:layout_width="0dp"
			    	android:layout_weight="2"
			    	android:layout_height="wrap_content"
			    	android:gravity="bottom"
			    	android:minLines="2"
			    	android:textSize="20sp"
			    	android:hint="@string/custom_answer_text"/>
			</LinearLayout>
			<LinearLayout
			   	android:layout_width="match_parent"
		       	android:layout_height="wrap_content"
		       	android:orientation="horizontal" >
				<TextView
				    android:id="@+id/custom_wrong1_text"
				    android:layout_height="wrap_content"
				    android:layout_gravity="bottom|left"
					android:layout_width="0dp"
					android:layout_weight="1"
					android:text="@string/custom_wrong_text"
					android:textSize="20sp"
					android:textStyle="bold"/>
				<EditText
			    	android:id="@+id/custom_wrong1_edit_text"
			    	android:layout_width="0dp"
			    	android:layout_weight="2"
			    	android:layout_height="wrap_content"
			    	android:gravity="bottom"
			    	android:minLines="2"
			    	android:textSize="20sp"
			    	android:hint="@string/custom_wrong_text"/>
			</LinearLayout>
			<LinearLayout
			   	android:layout_width="match_parent"
		       	android:layout_height="wrap_content"
		       	android:orientation="horizontal" >
				<TextView
				    android:id="@+id/custom_wrong2_text"
				    android:layout_height="wrap_content"
				    android:layout_gravity="bottom|left"
					android:layout_width="0dp"
					android:layout_weight="1"
					android:text="@string/custom_wrong_text"
					android:textSize="20sp"
					android:textStyle="bold"/>
				<EditText
			    	android:id="@+id/custom_wrong2_edit_text"
			    	android:layout_width="0dp"
			    	android:layout_weight="2"
			    	android:layout_height="wrap_content"
			    	android:gravity="bottom"
			    	android:minLines="2"
			    	android:textSize="20sp"
			    	android:hint="@string/custom_wrong_text"/>
			</LinearLayout>
			<LinearLayout
			   	android:layout_width="match_parent"
		       	android:layout_height="wrap_content"
		       	android:orientation="horizontal" >
				<TextView
				    android:id="@+id/custom_wrong3_text"
				    android:layout_height="wrap_content"
				    android:layout_gravity="bottom|left"
					android:layout_width="0dp"
					android:layout_weight="1"
					android:text="@string/custom_wrong_text"
					android:textSize="20sp"
					android:textStyle="bold"/>
				<EditText
			    	android:id="@+id/custom_wrong3_edit_text"
			    	android:layout_width="0dp"
			    	android:layout_weight="2"
			    	android:layout_height="wrap_content"
			    	android:gravity="bottom"
			    	android:minLines="2"
			    	android:textSize="20sp"
			    	android:hint="@string/custom_wrong_text"/>
			</LinearLayout>
			<LinearLayout
			   	android:layout_width="match_parent"
		       	android:layout_height="wrap_content"
		       	android:orientation="horizontal" >
				<TextView
				    android:id="@+id/difficulty_text"
				    android:layout_height="wrap_content"
				    android:layout_gravity="bottom|left"
					android:layout_width="0dp"
					android:layout_weight="1"
					android:text="@string/difficulty"
					android:textSize="20sp"
					android:textStyle="bold"/>
				<Spinner
			        android:id="@+id/spinner_difficulty"
			        android:layout_width="0dp"
			        android:layout_weight="2"
			        android:layout_height="wrap_content"
			        android:prompt="@string/prompt_difficulty" />
			</LinearLayout>
			<LinearLayout
			   	android:layout_width="match_parent"
		       	android:layout_height="wrap_content"
		       	android:orientation="horizontal" >
				<TextView
				    android:id="@+id/category_text"
				    android:layout_height="wrap_content"
				    android:layout_gravity="bottom|left"
					android:layout_width="0dp"
					android:layout_weight="1"
					android:text="@string/category"
					android:textSize="20sp"
					android:textStyle="bold"/>
				<Spinner
			        android:id="@+id/spinner_category"
			        android:layout_width="0dp"
			        android:layout_weight="1"
			        android:layout_height="wrap_content"
			        android:prompt="@string/category" />
				<EditText
			    	android:id="@+id/category_edit_text"
			    	android:layout_width="0dp"
			    	android:layout_weight="1"
			    	android:layout_height="wrap_content"
			    	android:gravity="bottom"
			    	android:textSize="20sp"
			    	android:hint="@string/category_text"/>
			</LinearLayout>
			<LinearLayout
			   	android:layout_width="match_parent"
		       	android:layout_height="wrap_content"
		       	android:layout_margin="10dp"
		       	android:orientation="horizontal" >
				<Button
			        android:id="@+id/done"
			        android:layout_width="0dp"
			        android:layout_weight="1"
			        android:layout_height="wrap_content"
			        android:maxLines="1"
			        android:textSize="20sp"
			        android:text="@string/add" />
			    <Button
			        android:id="@+id/cancel"
			        android:layout_width="0dp"
			        android:layout_weight="1"
			        android:layout_height="wrap_content"
			        android:maxLines="1"
			        android:textSize="20sp"
			        android:text="@string/cancel" />
			</LinearLayout>
		</LinearLayout>
	</ScrollView>
</LinearLayout>