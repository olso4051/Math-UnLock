<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/question_pack_background"
    android:descendantFocusability="blocksDescendants"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="horizontal"
	android:background="@drawable/lv_dark"
	android:paddingLeft="@dimen/login_vertical_margin_half"
	android:paddingRight="@dimen/login_vertical_margin_half"
	android:paddingTop="@dimen/login_vertical_margin_quarter"
	android:paddingBottom="@dimen/login_vertical_margin_quarter" >
	
    <CheckBox
        android:id="@+id/question_pack_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:button="@drawable/custom_checkbox" />

    <TextView 
		android:id="@+id/question_pack_name"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:gravity="center_vertical|left"
		android:ellipsize="end"
		android:maxLines="1"
		android:paddingLeft="@dimen/login_vertical_margin_half"
		android:textSize="@dimen/text_size_normal_plus"
		android:textColor="@color/lv_txt" />
	
</LinearLayout>
